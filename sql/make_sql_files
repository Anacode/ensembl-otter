#!/usr/local/bin/perl5.6.1 -w

### make_sql_files

use strict;
use Bio::Otter::SQL::Parser;
use Symbol 'gensym';

{
    my $parser =  Bio::Otter::SQL::Parser->new;
    foreach my $file_name (@ARGV) {
        my $sql = $parser->parse_file($file_name);
        $sql->make_transactional;
        print $sql->string;
    }
}


__END__

=head1 NAME - make_sql_files

=head1 AUTHOR

