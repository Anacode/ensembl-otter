#!/bin/sh
PATH=/usr/bin:/bin
VERSION=0.1


more <<"EOF"
   Otter, Apollo and EnsEMBL Website Install

This installer will unpack the files into a temporary directory and then
install them into a directory of your choice.

   Put together by Steve Searle and Michele Clamp
         
   Contact searle@sanger.ac.uk if you have problems with this install.

EOF
instdir=
while [ x$instdir = x ]; do
    echo
    echo "Where do you want to install otter? "
    read instdir leftover
done

tmpdirname=/tmp/otter_dist_tmp.$$
mkdir $tmpdirname

echo "Extracting to $tmpdirname..."
rundir=`pwd`
cd $tmpdirname
gzip -dc $rundir/otterdist.$VERSION.tar.gz | $rundir/tar -xvf -

echo "Installing in $instdir..."
$rundir/moveperl -r a -s $LONGDIR $tmpdirname $instdir

cd $rundir

rm -rf $tmpdirname
echo "Done."
exit 0
